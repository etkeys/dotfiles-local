!#define G(x, pos) #x[pos]
!#define GETCHAR(x,pos) G(x,pos)
!#define TRIM1(x) SUBSTR x, 1, 6
!#define C(x, p) x[p]
!#define COLORNOHASH(x) \
!    typename EXPAND<x, \
!                    cstring<C(x,1),C(x,2),C(x,3),C(x,4),C(x,5),C(x,6)>::type
!
! https://stackoverflow.com/a/525650
!#define HASH #
!#define CONCATX(h, c) h ## c
!#define CONCAT(h, c) CONCATX(h, c)
!#define STRTOCOLOR(s) CONCAT(HASH,s)
!i3-wm.program.lock_background: STRTOCOLOR(ffffff)
i3-wm.program.lock_background: 0a0e14
