{
    "accessibility.dimUnfocused.enabled": true,
    "accessibility.dimUnfocused.opacity": 0.4,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.copyWithSyntaxHighlighting": false,
    "editor.cursorStyle": "block",
    "editor.detectIndentation": false,
    "editor.emptySelectionClipboard": false,
    "editor.fontFamily": "'Ubuntu mono', 'Material Design Icons', 'FontAwesome', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 13,
    "editor.fontWeight": "normal",
    "editor.lineNumbers": "relative",
    "editor.minimap.maxColumn": 80,
    "editor.renderControlCharacters": false,
    "editor.renderWhitespace": "all",
    "editor.rulers": [
        80,
        120
    ],
    "editor.suggest.insertMode": "insert",
    "editor.suggest.showStatusBar": true,
    "editor.tabSize": 4,
    "extensions.ignoreRecommendations": false,
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.pytest_cache": true,
        "**/.svn": true,
        "**/.venv": true,
        "**/__pycache__": true,
        "**/CVS": true
    },
    "json.format.enable": true,
    "json.sortOnSave.enable": true,
    "keyboard.dispatch": "keyCode",
    "php.validate.executablePath": "/opt/lampp/bin/php",
    "python.languageServer": "Pylance",
    "python.terminal.activateEnvironment": true,
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.fontWeight": "normal",
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash"
        },
        "fish": {
            "path": "fish"
        },
        "pwsh": {
            "icon": "terminal-powershell",
            "path": "pwsh"
        }
    },
    "terminal.integrated.tabs.enabled": true,
    "vim.cursorStylePerMode.insert": "line",
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "after": [
                "<Esc>"
            ],
            // Easier exit out of insert mode
            "before": [
                "j",
                "j"
            ]
        }
    ],
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            //New file
            "before": [
                "<leader>",
                "<C-n>"
            ],
            "commands": [
                "workbench.action.files.newUntitledFile"
            ]
        },
        {
            "after": [
                "3",
                "<C-y>"
            ],
            // Ctrl-y increased distance
            "before": [
                "<C-y>"
            ]
        },
        {
            "after": [
                "3",
                "<C-e>"
            ],
            // Ctrl-e increased distance
            "before": [
                "<C-e>"
            ]
        },
        {
            "after": [
                "A",
                "<enter>",
                "<Esc>"
            ],
            // Add a blank line below
            "before": [
                "<leader>",
                ";"
            ]
        },
        {
            // Copy current line down
            "before": [
                "<leader>",
                "d"
            ],
            "commands": [
                "editor.action.copyLinesDownAction"
            ]
        },
        {
            // Copy current line up
            "before": [
                "<leader>",
                "u"
            ],
            "commands": [
                "editor.action.copyLinesUpAction"
            ]
        },
        {
            // Move current line down
            "before": [
                "<leader>",
                "D"
            ],
            "commands": [
                "editor.action.moveLinesDownAction"
            ]
        },
        {
            // Move current line up
            "before": [
                "<leader>",
                "U"
            ],
            "commands": [
                "editor.action.moveLinesUpAction"
            ]
        },
        {
            "after": [
                "<C-w>",
                "h"
            ],
            // Switch to window on the left
            "before": [
                "g",
                "H"
            ]
        },
        {
            "after": [
                "<C-w>",
                "l"
            ],
            // Switch to window on the right
            "before": [
                "g",
                "L"
            ]
        },
        {
            "after": [
                "<C-w>",
                "j"
            ],
            // Switch to window down
            "before": [
                "g",
                "J"
            ]
        },
        {
            "after": [
                "<C-w>",
                "k"
            ],
            // Switch to window up
            "before": [
                "g",
                "K"
            ]
        },
        {
            // Switch to tab left
            "before": [
                "g",
                "h"
            ],
            "commands": [
                ":tabp"
            ]
        },
        {
            // Switch to tab right
            "before": [
                "g",
                "l"
            ],
            "commands": [
                ":tabn"
            ]
        },
        {
            "after": [
                "\"",
                "_",
                "d"
            ],
            // Change "delete (cut)" to true delete
            "before": [
                "d"
            ]
        }
    ],
    "vim.surround": true,
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "after": [
                "3",
                "<C-y>"
            ],
            // Ctrl-y increased distance
            "before": [
                "<C-y>"
            ]
        },
        {
            "after": [
                "3",
                "<C-e>"
            ],
            // Ctrl-e increased distance
            "before": [
                "<C-e>"
            ]
        },
        {
            // Copy current line down
            "before": [
                "<leader>",
                "d"
            ],
            "commands": [
                "editor.action.copyLinesDownAction"
            ]
        },
        {
            // Copy current line up
            "before": [
                "<leader>",
                "u"
            ],
            "commands": [
                "editor.action.copyLinesUpAction"
            ]
        },
        {
            // Move current line down
            "before": [
                "<leader>",
                "D"
            ],
            "commands": [
                "editor.action.moveLinesDownAction"
            ]
        },
        {
            // Move current line up
            "before": [
                "<leader>",
                "U"
            ],
            "commands": [
                "editor.action.moveLinesUpAction"
            ]
        },
        {
            "before": [
                "<leader>",
                "<C-c>"
            ],
            "commands": [
                "editor.action.clipboardCopyAction"
            ]
        },
        {
            "after": [
                "\"",
                "_",
                "d"
            ],
            // Change "delete (cut)" to true delete
            "before": [
                "d"
            ]
        }
    ],
    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Ayu Dark Bordered",
    "workbench.editor.tabSizing": "fit",
    "workbench.editor.wrapTabs": true,
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "none",
    "maui.configuration.androidSdkPreferredPath": "/home/erik/Android/Sdk",
    "joplin.baseUrl": "http://localhost:41184",
    "joplin.token": "bc052768e2f00c495c66a0ca8a497d00437465ceaf896774cb3f8b4c5003b0ac38123098e6bc8341ca01f1677856d39f676efeeaf679c773e01fa60d62b835b6",
    "files.associations": {
        "*.xaml": "xml"
    },
    "git.confirmSync": false,
    "git.suggestSmartCommit": false,
    "git.openRepositoryInParentFolders": "never",
    "git.pruneOnFetch": true,
    "[scminput]": {
        "editor.rulers": [50, 72],
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 72,
    },
    "workbench.iconTheme": "material-icon-theme"
}